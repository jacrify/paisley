{
    "swagger": "2.0",
    "info": {
        "title": "Paisley API",
        "description": "The official API for interacting with Paisley Transactions, Tags and Rules",
        "version": "1.0.0"
    },
    "host": "localhost:4000",
    "basePath": "/",
    "tags": [
        {
            "name": "transaction",
            "description": "Operations on Financial Transactions"
        }
    ],
    "paths": {
        "/update_transaction": {
            "post": {
                "tags": [
                    "transaction"
                ],
                "summary": "Update a transaction with new details",
                "description": "Updates an existing transaction with new tags and/or description",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Transaction object that needs to be added or updated",
                        "required": true,
                        "schema": {
                          "$ref": "#/definitions/Transaction"
                        }
                      }

                    
                ],
                "responses": {
                    "200": {
                        "description": "Transaction successfully updated or inserted"
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "404": {
                        "description": "ID does not exist in 'transaction' table"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "definitions": {
        "Transaction": {
            "type": "object",
            "required": [
                "id"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "example": "56c0976c71cad48d0dce8140476b179a1cf812a6790af33e12675cd6529ecb10"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "Amazon (Merchant)",
                        "Shopping > Online",
                        "Recurring > Subscription"
                    ]
                },
                "description": {
                    "type": "string",
                    "example": "Amazon Prime"
                }
            }
        }
    }
}